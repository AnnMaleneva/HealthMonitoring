@using HealthMonitoring.Models
@{
    Layout = "~/Layout/_MainLayout.cshtml";
    string Login = null;
    string Password = null;

    Login = Request["login"];

    if (IsPost)
    {
        FormsAuthentication.SetAuthCookie(Login, createPersistentCookie: true);

        Response.Redirect("~/Pages/MainUser");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="form" style="width:300px; margin: 0 auto; padding-top: 20px;">
        <form class="form-horizontal" role="form" method="POST" action="~/Pages/Login">
            <div class="form-group">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Логин</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Логин" name="login" value=@Login />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Пароль</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" placeholder="Пароль" name="password" value=@Password />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Войти</button>
                    </div>
                </div>
                </div>
        </form>
    </div>
</body>
</html>
